<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wanye.mapper.UserMapper">

    <resultMap id="userInfo" type="com.wanye.entity.UserInfo">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <association property="user" javaType="com.wanye.entity.User">
            <id property="id" column="id"></id>
            <result property="name" column="name"/>
        </association>
    </resultMap>

    <select id="getUserById" resultType="com.wanye.entity.User">
        SELECT * FROM USER WHERE id = #{id}
    </select>
    <select id="getUserList" resultType="com.wanye.entity.User">
        SELECT * FROM USER
    </select>
    <select id="getUserInfo" resultMap="userInfo">
        select * from user u left join user1 u1 on u.id = u1.id where u.id = 1;
    </select>
    
</mapper>